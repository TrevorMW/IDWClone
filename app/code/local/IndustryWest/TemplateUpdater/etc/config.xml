<?xml version="1.0"?>
<config>
  <modules>
    <IndustryWest_TemplateUpdater>
      <version>0.1.3</version>
    </IndustryWest_TemplateUpdater>
  </modules>
  <global>
    <page>
      <layouts>

        <!-- CUSTOM HOMEPAGE TEMPLATE-->
        <custom_static_page_one translate="label">
          <label>Custom Homepage</label>
		 			<template>page/1column-homepage.phtml</template>
          <layout_handle>home_page_template</layout_handle>
        </custom_static_page_one>

        <!-- CUSTOM BANNER PAGE TEMPLATE -->
        <banner_page translate="label">
          <label>1 Column Banner Template</label>
		 			<template>page/1column-banner.phtml</template>
          <layout_handle>banner_template</layout_handle>
        </banner_page>

        <!-- CUSTOM PRODUCT PAGE TEMPLATE -->
        <two_column_banner translate="label">
          <label>2 Column Right Banner Template</label>
		 			<template>page/2column-right-banner.phtml</template>
          <layout_handle>two_column_banner</layout_handle>
        </two_column_banner>


        <!-- CUSTOM PRODUCT PAGE TEMPLATE -->
        <two_column_category_page translate="label">
          <label>2 Column Left Category Template</label>
		 			<template>page/2columns-left-category.phtml</template>
          <layout_handle>two_column_category_page</layout_handle>
        </two_column_category_page>


        <!-- CUSTOM PRODUCT PAGE TEMPLATE -->
        <cart_two_column translate="label">
          <label>2 Column Left Category Template</label>
		 			<template>page/2columns-cart.phtml</template>
          <layout_handle>cart_two_column</layout_handle>
        </cart_two_column>

        <!-- CUSTOM PRODUCT PAGE TEMPLATE -->
        <wordpress_one_column translate="label">
          <label>1 Column Banner Wordpress</label>
		 			<template>page/1column-banner-wordpress.phtml</template>
          <layout_handle>1column_banner_wordpress</layout_handle>
        </wordpress_one_column>

      </layouts>
    </page>
    <blocks>


    </blocks>

    <resources>
        <TemplateUpdater_setup>
            <setup>
                <module>IndustryWest_TemplateUpdater</module>
                <class>Mage_Catalog_Model_Resource_Setup</class>
            </setup>
            <connection>
                <use>default_setup</use>
            </connection>
        </TemplateUpdater_setup>
    </resources>
  </global>
</config>
