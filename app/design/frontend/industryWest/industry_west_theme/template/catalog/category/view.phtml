      <div class="table-cell catalog-hero-headline">
        <h2 class="catalog-hero-title"><?php echo $_category->getName(); ?></h2>
      </div>
    </div>
  </div>
<?php endif; $_description = $this->getCurrentCategory()->getDescription() ?>


<?php if( $_category->getId() != 3 && $_category->getId() != 208 ) { ?>
