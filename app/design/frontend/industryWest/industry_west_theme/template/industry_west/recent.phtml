$posts = $this->getPosts(); $i = 0;  ?>

<div class="wrapper about-us-recent-posts" id="js-posts">
  <div class="container">
    <div class="fake-fieldset">
      <?php if ($title = $this->getTitle()): ?>
      <h3 class="legend">About the Studio</h3>
      <?php endif; ?>
      <ul id="<?php echo $this->getListId() ?>">
        <?php if (count($posts) > 0 ): ?>
    			<?php foreach($posts as $post): if( $i < 3 ){ ?>
    				<li class="recent-post">
    				  <article>
      				  <header>
        				  <div class="post-meta"><time><?php echo $this->htmlEscape($post->getPostDate()) ?></time></div>
                  <h3><?php echo $this->htmlEscape($post->getPostTitle()) ?></h3>
      				  </header>
    				  </article>
    				  <a href="<?php echo $post->getPermalink() ?>" title="<?php echo $this->htmlEscape($post->getPostTitle()) ?>" class="btn btn-orange">Read Post</a>
    				</li>
    			<?php } $i++; endforeach; ?>
        <?php endif; ?>
      </ul>
    </div>
  </div>
</div>

