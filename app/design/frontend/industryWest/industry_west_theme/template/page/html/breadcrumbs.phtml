$current = $this->getLayout()->getBlock('head')->getTitle(); ?>

<div class="wrapper breadcrumbs">
  <div class="container">
    <ul class="inline">
      <?php if ( $crumbs && is_array( $crumbs ) ) : ?>

  			<?php foreach($crumbs as $_crumbName => $_crumbInfo): ?>
  				<li class="crumb crumb-<?php echo $_crumbName ?>">
  				<?php if($_crumbInfo['link']): ?>
  					<a href="<?php echo $_crumbInfo['link'] ?>" title="<?php echo $this->escapeHtml($_crumbInfo['title']) ?>"><?php echo $this->escapeHtml($_crumbInfo['label']) ?></a>
  				<?php else: ?>
  					<?php echo $this->escapeHtml($_crumbInfo['label']) ?>
  				<?php endif; ?>

  				</li>
  				<?php if(!$_crumbInfo['last']): ?>
  					<li class="crumb separator"><span></span></li>
  				<?php endif; ?>
  			<?php endforeach; ?>

      <?php else: ?>

        <li class="crumb"><a href="/" title="Home">Home</a></li>
        <li class="crumb separator"><span></span></li>
        <li class="crumb"><?php echo $current?></li>

      <?php endif; ?>
    </ul>
	</div>
</div>